{
  "name": "vscode-storybook",
  "displayName": "vscode-storybook",
  "description": "StoryBook preview for VSCode",
  "version": "0.0.2",
  "publisher": "cstechnologies",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/CzBuCHi/vscode-storybook.git"
  },
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-storybook.openStorybook",
    "workspaceContains:node_modules/@storybook/react/package.json"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "VSCode-StoryBook configuration",
      "properties": {
        "storybook.port": {
          "description": "Port used for storybook server",
          "type": "number",
          "default": 6006
        },
        "storybook.staticDir": {
          "description": "Static files directory",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "storybook.configDir": {
          "description": "Configuration directory",
          "type": "string",
          "default": ".storybook"
        },
        "storybook.nodePath": {
          "description": "Path to node executable.",
          "type": "string",
          "default": "c:\\Program Files\\nodejs\\node.exe"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-storybook.openStorybook",
        "title": "Open Storybook"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "typescript": "^2.6.1",
    "vscode": "1.1.10"
  },
  "dependencies": {
    "@storybook/react": "3.2.18",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "throttle-debounce": "^1.0.1"
  }
}
