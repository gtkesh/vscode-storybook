{
  "name": "vscode-storybook",
  "displayName": "vscode-storybook",
  "description": "StoryBook preview for VSCode",
  "version": "0.0.1",
  "publisher": "cstechnologies",
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:vscode-storybook.openStorybook"],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "VSCode-StoryBook configuration",
      "properties": {
        "storybook.port": {
          "description": "Port used for storybook server",
          "type": "number",
          "default": 6006
        },
        "storybook.host": {
          "description": "Host used for storybook server",
          "type": "string",
          "default": "localhost"
        },
        "storybook.staticDir": {
          "description": "Static files directory",
          "type": "string",
          "default": null
        },
        "storybook.configDir": {
          "description": "Configuration directory",
          "type": "string",
          "default": ".storybook"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-storybook.openStorybook",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "@storybook/react":"3.2.18"
  }
}
